<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= city.name %></div>
    <form class="ui form" action="/travel/<%= city._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="city[name]" value="<%= city.name %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="city[image]" value="<%= city.image %>">
        </div>
        <div class="field">
            <label>City Content</label>
            <textarea name="city[body]"><%= city.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>
