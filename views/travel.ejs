<% include ./partials/header %>

<div class='ui container main text'>
    <div class="ui huge header">Traveling Destination App</div>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% cities.forEach(function(city){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= city.image %>" >
                    </div>
                    <div class="content">
                         <a class="header" href="/cities/<%= city._id %>"><%=city.title%></a>
                         <div class="description">
                             <p><%- city.body.substring(0, 100) %>...</p>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/cities/<%= city._id %>">
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
    
<% include ./partials/footer %>
